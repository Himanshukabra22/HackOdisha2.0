<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="loginsignup.css">
    <link rel="stylesheet" href="index.css">
    <title>SignIn / SignUp</title>
</head>

<body>
    <div class="first">
        <div class="form-box">
            <div class="button-box">
                <div id="btn"></div>
                <button type="button" class="toggle-btn" onclick="login()">Log In</button>
                <button type="button" class="toggle-btn" onclick="register()" >Register</button>
            </div>
            <!-- <div class="socials">
                <img id="img1">
                <img id="img2" src="../../Public/content/Google.png">
                <img id="img3">
            </div> -->
            <form id="login" class="input-group" action="/login" method="POST">
                <input type="text" class="input-field" placeholder="User Id" name="username" required>
                <input type="text" class="input-field" placeholder="Enter Password" name="password" required>
                <input type="checkbox" class="check-box"><span>Remember Password</span>
                <button type="submit" class="submit-btn">Login</button>
            </form>
            <form id="register" class="input-group" action="/user" method="POST">
                <input type="text" class="input-field" placeholder="User Id" name="username" required>
                <input type="text" class="input-field" placeholder="Email Id" name="email" required>
                <input type="text" class="input-field" placeholder="Enter Password" name="password" required>
                <input type="text" class="input-field" placeholder="Re-Enter Password" name="confirmpassword" required>
                <input type="text" class="input-field" placeholder="Enter Phone Number" name="contact" required>
                <input type="text" class="input-field" placeholder="Enter Address" name="address" required>
                <label id="l1" for="dateOfBirth">D.O.B. : </label> 
                <input id="d1" type="date" name="dateOfBirth" required>
                <br>
                <input type="checkbox" class="check-box"><span>I agree to the terms and condiitons.</span>
                <button type="submit" class="submit-btn">Register</button>
            </form>
        </div>
    <footer class="base">
        <div>
            <span>Created by team NOOBERCODES for the purpose of</span>
            <a href="https://hackodisha2022.tech/" target="_blank">
                <img src="/content/HOlogo.png" title="HackOdisha2.0" alt="HOlogo">
            </a>
            <div class="eventbtns" id="basebtns">
                <div>
                    <button class="navbutton eventnavbtns" title="linkedin"><a
                            href="https://www.linkedin.com/company/dsc-iiitsurat/"><img src="content\linkedin.png"
                                id="takepart"></a></button>
                    <button class="navbutton eventnavbtns" title="Instagram"><a
                            href="https://instagram.com/gdsc_iiitsurat?igshid=YmMyMTA2M2Y="><img
                                src="content\instagram.png" id="share"></a></button>
                    <button class="navbutton eventnavbtns" title="IIIT Surat"><a href="http://www.iiitsurat.ac.in/"><img
                                src="content\surat.png" id="more"></a></button>
                </div>
            </div>
        </div>
    </footer>
    </div>
    <script>
        var x = document.getElementById("login");
        var y = document.getElementById("register");
        var z = document.getElementById("btn");

        function register() {
            x.style.left = "-400px";
            y.style.left = "50px";
            z.style.left = "110px";
        }
        function login() {
            x.style.left = "50px";
            y.style.left = "450px";
            z.style.left = "0";
        }
    </script>
</body>

</html>